pipeline {
  agent {
    docker { image 'liquibase/liquibase:4.4.2' }
  }
  
  stages {
    stage('Status') {
      steps {
        sh 'liquibase status --url="jdbc:postgresql://localhost:5432/postgres" --changeLogFile=my_app-wrapper.xml --username=postgres --password=password'
      }
    }
    stage('Update') {
      steps {
        sh 'liquibase update --url="jdbc:postgresql://localhost:5432/postgres" --changeLogFile=my_app-wrapper.xml --username=postgres --password=password'
      }
    }
  }
  post {
    always {
      cleanWs()
    }
  }
}
