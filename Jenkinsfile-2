pipeline {
  agent any
  environment {
    MARIADB_CREDS=credentials('mysql-db')
  }
  stages {
    stage('Status') {
      steps {
        sh 'liquibase status --url="jdbc:mysql://127.0.0.1:3306/my_app?autoReconnect=true&useSSL=false" --changeLogFile=my_app-wrapper.xml --username=$MARIADB_CREDS_USR --password=$MARIADB_CREDS_PSW'
      }
    }
  }
  post {
    always {
      cleanWs()
    }
  }
}
